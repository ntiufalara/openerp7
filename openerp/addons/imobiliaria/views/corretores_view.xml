<?xml version="1.0" encoding="UTF-8" ?>

<openerp>
    <data>

        <record id="corretores_action" model="ir.actions.act_window">
            <field name="name">Corretores</field>
            <field name="res_model">imobiliaria.corretor</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="corretores_tree" model="ir.ui.view">
            <field name="name">Corretores</field>
            <field name="model">imobiliaria.corretor</field>
            <field name="arch" type="xml">
                <tree string="Corretores">
                    <field name="cpf" />
                    <field name="name" />
                    <field name="data_nascimento" />
                    <field name="telefone_contato" />
                </tree>
            </field>
        </record>

        <record id="corretores_form" model="ir.ui.view">
            <field name="name">Novo Corretor</field>
            <field name="model">imobiliaria.corretor</field>
            <field name="arch" type="xml">
                <form string="Novo Corretor" version="7.0">
                    <group>
                        <field name="name" />
                        <field name="cpf" />
                    </group>
                    <group>
                        <field name="data_nascimento" />
                        <field name="telefone_contato" />
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>